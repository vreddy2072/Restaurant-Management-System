{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "250mb",
        "installCommand": "pip install --no-deps --no-cache-dir fastapi uvicorn sqlalchemy pydantic python-dotenv python-jose[cryptography] passlib[bcrypt] python-multipart email-validator",
        "includeFiles": [
          "backend/api/app.py",
          "backend/api/routes/*.py",
          "backend/models/schemas/*.py",
          "backend/services/*.py",
          "backend/utils/*.py"
        ],
        "excludeFiles": [
          "**/__pycache__",
          "**/*.pyc",
          "**/tests",
          "**/.pytest_cache"
        ]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd frontend && npm install --legacy-peer-deps && npm run build",
        "outputDirectory": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/app.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11",
    "NODE_VERSION": "20.x",
    "DATABASE_URL": "sqlite:///backend/database/restaurant.db",
    "ALLOWED_ORIGINS": "https://*.vercel.app,http://localhost:5173,http://localhost:3000",
    "PYTHONPATH": "/var/task"
  }
}
