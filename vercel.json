{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd frontend && npm install --legacy-peer-deps && npm run build",
        "outputDirectory": "frontend/dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/api/app.py" },
    { "source": "/(.*)", "destination": "/frontend/dist/index.html" }
  ],
  "env": {
    "PYTHON_VERSION": "3.11",
    "NODE_VERSION": "20.x",
    "DATABASE_URL": "sqlite:///backend/database/restaurant.db",
    "ALLOWED_ORIGINS": "https://*.vercel.app,http://localhost:5173,http://localhost:3000"
  }
}
